<div data-id="{{ firm.id }}" class="map__info-list-item ">
    <div class="map__info-list-side map__info-list-side--left">
        <div class="map__info-list-item-title">
            <a title="{{ firm.subtitle|capitalize }} {{ firm.name }}" href="{{ firm.url }}">
                {{ firm.name }}
            </a>
        </div>
        <div class="map__info-list-item-address">
            {{ firm.address }}
        </div>
        <div class="map__info-list-item-phone">
            {% set break = false %}
            {% set phone = '' %}
            {% for contact in firm.contacts if contact.type == 'phone' and not break %}
                {{ contact.value }}
                {% set break = true %}
                {% set phone = contact.value %}
            {% endfor %}
        </div>
    </div>
    <div class="map__info-list-side map__info-list-side--right">
        <div class="l-sides">

            <div class="map__info-list-item-rate l-side-right">
                {% if firm.rating %}
                    {% for i in 1..5 %}
                        {% if firm.rating >= i %}
                            <i class="i-rate i-rate-1"></i>
                        {% else %}
                            <i class="i-rate i-rate-3"></i>
                        {% endif %}
                    {% endfor %}
                {% else %}
                    {% for i in 1..5 %}
                        <i class="i-rate i-rate-3"></i>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <div class="l-sides">

            <div class="map__info-list-item-button map__info-list-item-button--phone l-side-left">
                <a href="tel:{{ phone }}">
                    <i class="i-phone"></i>
                    <span>вызов</span>
                </a>
            </div>

            <div class="map__info-list-item-button map__info-list-item-button--route l-side-right">
                <a href="#" title="Проложить маршрут" class="get-way">
                    <i class="i-route"></i>
                    <span>маршрут</span>
                </a>
            </div>
        </div>
    </div>
</div>
